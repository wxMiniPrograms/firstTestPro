  color: #999;
  display: inline-block;
}

.center{
  width: 100%;
  padding: 0 2.657rem 0 2.0674rem;
  line-height: 4.0714rem;
  cursor: pointer;
  font-size: 1rem;
  box-sizing: border-box;
