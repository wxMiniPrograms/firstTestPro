}

.li{
  width: 100%;
  height: 4.0714rem;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
  display: flex;
}

.left{
  padding: 0 .5rem;
  height: 1.0714rem;
  line-height: 1.0714rem;
